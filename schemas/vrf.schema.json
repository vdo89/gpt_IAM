{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/vrf.schema.json",
  "title": "EVPN VRF definition",
  "type": "object",
  "$defs": {
    "host_prefix": {
      "type": "string",
      "oneOf": [
        { "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/32$" },
        { "pattern": "^[0-9a-fA-F:]+/128$" }
      ]
    },
    "route_target": {
      "type": "string",
      "pattern": "^[0-9]{1,5}:[0-9]{1,10}$"
    }
  },
  "required": ["vrfs"],
  "properties": {
    "vrfs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "zone",
          "l3vni",
          "rd",
          "rt_import",
          "rt_export",
          "allowed_vip_exports"
        ],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^(VRF-)?(PLATFORM|TENANT-[A-Z0-9_-]+|DMZ|STORAGE|FIREWALL)$"
          },
          "zone": {
            "type": "string",
            "enum": ["PLATFORM", "TENANT", "STORAGE", "FIREWALL", "DMZ"]
          },
          "l3vni": {
            "type": "integer",
            "minimum": 5000,
            "maximum": 16777215
          },
          "rd": {
            "$ref": "#/$defs/route_target"
          },
          "rt_import": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/$defs/route_target"
            }
          },
          "rt_export": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/$defs/route_target"
            }
          },
          "allowed_vip_exports": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/host_prefix"
            },
            "uniqueItems": true,
            "default": []
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "unevaluatedProperties": false
      }
    }
  },
  "additionalProperties": false,
  "unevaluatedProperties": false
}
