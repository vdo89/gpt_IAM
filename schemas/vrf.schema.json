{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/vrf.schema.json",
  "title": "EVPN VRF definition",
  "type": "object",
  "required": ["vrfs"],
  "properties": {
    "vrfs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "l3vni",
          "rd",
          "rt_import",
          "rt_export",
          "allowed_vip_exports"
        ],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^VRF-(PLATFORM|TENANT-[A-Z0-9-]+|DMZ|STORAGE)$"
          },
          "l3vni": {
            "type": "integer",
            "minimum": 5000,
            "maximum": 16777215
          },
          "rd": {
            "type": "string",
            "pattern": "^[0-9]{1,5}:[0-9]{1,10}$"
          },
          "rt_import": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^[0-9]{1,5}:[0-9]{1,10}$"
            },
            "contains": {"const": {"$data": "1/rd"}},
            "description": "Must include the VRF RD to guarantee import symmetry"
          },
          "rt_export": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^[0-9]{1,5}:[0-9]{1,10}$"
            },
            "contains": {"const": {"$data": "1/rd"}},
            "description": "Must include the VRF RD to guarantee export symmetry"
          },
          "allowed_vip_exports": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^(?:(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/32|(?:[0-9a-fA-F]{0,4}:){2,7}[0-9a-fA-F]{1,4}/128)$"
            },
            "uniqueItems": true,
            "default": []
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
