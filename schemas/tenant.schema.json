{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/tenant.schema.json",
  "title": "EVPN tenant intent",
  "type": "object",
  "$defs": {
    "ipv4_cidr": {
      "type": "string",
      "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/(?:[0-9]|[1-2][0-9]|3[0-2])$"
    },
    "ipv6_cidr": {
      "type": "string",
      "pattern": "^[0-9a-fA-F:]+/(?:[0-9]|[1-9][0-9]|1[01][0-9]|12[0-8])$"
    },
    "host_prefix": {
      "type": "string",
      "oneOf": [
        { "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/32$" },
        { "pattern": "^[0-9a-fA-F:]+/128$" }
      ]
    },
    "route_target": {
      "type": "string",
      "pattern": "^[0-9]{1,5}:[0-9]{1,10}$"
    }
  },
  "required": [
    "tenant",
    "vlan",
    "subnet",
    "gateway",
    "l2vni",
    "l3vni",
    "rt_l2",
    "rt_l3",
    "racks",
    "vip_exports"
  ],
  "properties": {
    "tenant": {
      "type": "string",
      "pattern": "^(VRF-)?(TENANT-[A-Z0-9_-]+)$"
    },
    "vlan": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4094
    },
    "subnet": {
      "type": "string",
      "oneOf": [
        { "$ref": "#/$defs/ipv4_cidr" },
        { "$ref": "#/$defs/ipv6_cidr" }
      ]
    },
    "gateway": {
      "type": "string",
      "oneOf": [
        { "$ref": "#/$defs/ipv4_cidr" },
        { "$ref": "#/$defs/ipv6_cidr" }
      ]
    },
    "l2vni": {
      "type": "integer",
      "minimum": 5000,
      "maximum": 16777215
    },
    "l3vni": {
      "type": "integer",
      "minimum": 5000,
      "maximum": 16777215
    },
    "rt_l2": {
      "$ref": "#/$defs/route_target"
    },
    "rt_l3": {
      "$ref": "#/$defs/route_target"
    },
    "racks": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "lb_vip": {
      "$ref": "#/$defs/host_prefix"
    },
    "vip_exports": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["vrf", "prefix"],
        "properties": {
          "vrf": {
            "type": "string"
          },
          "prefix": {
            "$ref": "#/$defs/host_prefix"
          }
        },
        "additionalProperties": false,
        "unevaluatedProperties": false
      },
      "uniqueItems": true
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "unevaluatedProperties": false
}
