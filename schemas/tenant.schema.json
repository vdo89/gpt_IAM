{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/tenant.schema.json",
  "title": "EVPN tenant intent",
  "type": "object",
  "required": [
    "tenant",
    "vlan",
    "subnet",
    "gateway",
    "l2vni",
    "l3vni",
    "rt_l2",
    "rt_l3",
    "racks",
    "vip_exports"
  ],
  "properties": {
    "tenant": {
      "type": "string",
      "pattern": "^(VRF-)?TENANT-[A-Z0-9-]+$"
    },
    "vlan": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4094
    },
    "subnet": {
      "type": "string",
      "pattern": "^(?:(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}|(?:[0-9a-fA-F]{0,4}:){2,7}[0-9a-fA-F]{1,4}/[0-9]{1,3})$"
    },
    "gateway": {
      "type": "string",
      "pattern": "^(?:(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}|(?:[0-9a-fA-F]{0,4}:){2,7}[0-9a-fA-F]{1,4}/[0-9]{1,3})$"
    },
    "l2vni": {
      "type": "integer",
      "minimum": 5000,
      "maximum": 16777215,
      "description": "Must equal data.policy.vni.base_l2vni + data.policy.vni.offset + vlan"
    },
    "l3vni": {
      "type": "integer",
      "minimum": 5000,
      "maximum": 16777215
    },
    "rt_l2": {
      "type": "string",
      "pattern": "^[0-9]{1,5}:[0-9]{1,10}$"
    },
    "rt_l3": {
      "type": "string",
      "pattern": "^[0-9]{1,5}:[0-9]{1,10}$"
    },
    "racks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lb_vip": {
      "type": "string",
      "pattern": "^(?:(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/32|(?:[0-9a-fA-F]{0,4}:){2,7}[0-9a-fA-F]{1,4}/128)$"
    },
    "vip_exports": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["vrf", "prefix"],
        "properties": {
          "vrf": {
            "type": "string",
            "pattern": "^VRF-(PLATFORM|TENANT-[A-Z0-9-]+|DMZ|STORAGE)$"
          },
          "prefix": {
            "type": "string",
            "pattern": "^(?:(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/32|(?:[0-9a-fA-F]{0,4}:){2,7}[0-9a-fA-F]{1,4}/128)$"
          }
        },
        "additionalProperties": false
      },
      "uniqueItems": true
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
