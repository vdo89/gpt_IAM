{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/tenant.schema.json",
  "title": "EVPN tenant intent",
  "type": "object",
  "required": [
    "tenant",
    "vlan",
    "l2vni_base",
    "subnet",
    "gateway",
    "l2vni",
    "l3vni",
    "rt_l2",
    "rt_l3",
    "racks",
    "vip_exports"
  ],
  "properties": {
    "tenant": {
      "type": "string",
      "pattern": "^(VRF-)?(TENANT-[A-Z0-9_-]+)$"
    },
    "l2vni_base": {
      "type": "integer",
      "minimum": 1,
      "maximum": 16777215
    },
    "vlan": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4094
    },
    "subnet": {
      "type": "string",
      "oneOf": [
        { "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$" },
        { "pattern": "^[0-9a-fA-F:]+/[0-9]{1,3}$" }
      ]
    },
    "gateway": {
      "type": "string",
      "oneOf": [
        { "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$" },
        { "pattern": "^[0-9a-fA-F:]+/[0-9]{1,3}$" }
      ]
    },
    "l2vni": {
      "type": "integer",
      "minimum": 5000,
      "maximum": 16777215
    },
    "l3vni": {
      "type": "integer",
      "minimum": 5000,
      "maximum": 16777215
    },
    "rt_l2": {
      "type": "string",
      "pattern": "^[0-9]{1,5}:[0-9]{1,10}$"
    },
    "rt_l3": {
      "type": "string",
      "pattern": "^[0-9]{1,5}:[0-9]{1,10}$"
    },
    "racks": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_-]+$"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "lb_vip": {
      "type": "string",
      "oneOf": [
        { "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/32$" },
        { "pattern": "^[0-9a-fA-F:]+/128$" }
      ]
    },
    "vip_exports": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["vrf", "prefix"],
        "properties": {
          "vrf": {
            "type": "string"
          },
          "prefix": {
            "type": "string",
            "oneOf": [
              { "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/32$" },
              { "pattern": "^[0-9a-fA-F:]+/128$" }
            ]
          }
        },
        "additionalProperties": false
      },
      "uniqueItems": true,
      "minItems": 0
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
