{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/tenant.schema.json",
  "title": "EVPN tenant intent",
  "type": "object",
  "required": [
    "tenant",
    "vrf",
    "vlan",
    "subnet",
    "gateway",
    "l2vni",
    "l3vni",
    "rt_l2",
    "rt_l3",
    "racks",
    "lb_vip",
    "vip_exports"
  ],
  "properties": {
    "tenant": {
      "type": "string",
      "pattern": "^(VRF-)?(TENANT-[A-Z0-9_-]+)$"
    },
    "vrf": {
      "type": "string",
      "pattern": "^(VRF-)?(PLATFORM|TENANT-[A-Z0-9_-]+|DMZ|STORAGE)$"
    },
    "vlan": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4094
    },
    "subnet": {
      "type": "string",
      "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$"
    },
    "gateway": {
      "type": "string",
      "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$"
    },
    "l2vni": {
      "type": "integer",
      "minimum": 5000,
      "maximum": 16777215
    },
    "l3vni": {
      "type": "integer",
      "minimum": 5000,
      "maximum": 16777215
    },
    "rt_l2": {
      "type": "string",
      "pattern": "^[0-9]{1,5}:[0-9]{1,10}$"
    },
    "rt_l3": {
      "type": "string",
      "pattern": "^[0-9]{1,5}:[0-9]{1,10}$"
    },
    "racks": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "lb_vip": {
      "type": "string",
      "pattern": "^(?:[0-9]{1,3}\.){3}[0-9]{1,3}/32$"
    },
    "vip_exports": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["vrf", "prefix"],
        "properties": {
          "vrf": {
            "type": "string"
          },
          "prefix": {
            "type": "string",
            "pattern": "^(?:[0-9]{1,3}\.){3}[0-9]{1,3}/32$"
          }
        },
        "additionalProperties": false
      },
      "uniqueItems": true
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "unevaluatedProperties": false
}
